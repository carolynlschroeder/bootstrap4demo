@model bootstrap4demo.Models.LoginModel
@{
    ViewData["Title"] = "Index";
}

<h2>Inline Form</h2>

<div class="container">
    <form class="form-inline" asp-controller="InlineForm" asp-action="Index" method="post">
        <label asp-for="Email" class="mr-sm-2"></label>
        <input asp-for="Email" class="form-control mb-2 mr-sm-2">
        <span asp-validation-for="Email" class="text-danger mr-sm-2"></span>
        <label asp-for="Password" class="mr-sm-2">Password:</label>
        <input type="password" asp-for="Password" class="form-control mb-2 mr-sm-2">
        <span asp-validation-for="Password" class="text-danger mr-sm-2"></span>
        <div class="form-check">
            <label class="form-check-label mb-2 mr-sm-2">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox"> Remember me
            </label>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</div>